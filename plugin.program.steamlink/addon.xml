<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.steamlink" name="Steamlink Launcher" version="0.0.2.1" provider-name="madddmike">
  <requires>
    <import addon="xbmc.python" version="2.25.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_US">Launch Steamlink from Kodi.</summary>
    <description lang="en_US">This plugin adds a Kodi launcher for starting Steamlink to broadcast Steam games from your Xbian Kodi setup.</description>
    <disclaimer lang="en_US"></disclaimer>
    <language>en</language>
    <platform>linux</platform>
    <license>GPLv2</license>
    <forum>https://github.com/maddmike/xbian-steamlink-launcher/issues</forum>
    <website></website>
    <email>mdshaw89@gmail.com</email>
    <source>https://github.com/madddmike/xbian-steamlink-launcher</source>
    <news>
      0.0.2.1 Modify for use with Xbian kodi
      0.0.2 Stop kodi to save resources and use heartbeat to detect kodi restart
      0.0.1 Initial release
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
        <screenshot>resources/screenshot.png</screenshot>
    </assets>
  </extension>
</addon>
